---
// Correctly import the Chart component from the components directory
import Chart from "./chart"; // Relative import since Tokenomics.astro and chart.tsx are in the same directory
---

<section id="Tokenomics" class="h-screen w-full z-20 relative pt-4">
    <img 
        src="/Tokenomics.jpg" 
        alt="tokenomics-background" 
        loading="lazy" 
        height="100" 
        width="100" 
        class="absolute -z-10 top-0 w-full h-full brightness-50" 
    />
    <h2 class="uppercase font-extrabold text-4xl text-white text-center">
        Tokenomics ( $ DYNX )
    </h2>
    <Chart client:load />
    <h3 class="uppercase font-extrabold text-4xl text-white text-center">
        Total Supply : 550,000,000 DYNX
    </h3>
</section>
