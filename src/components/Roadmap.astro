---
import { Image } from "astro:assets";

interface Cards {
    age: string;
    description: string;
}
const cards: Cards[] = [
    {
        age: `Q4 2024`,
        description: `Project Presentation and investor Acquisition`,
    },
    {
        age: `Q1 2025`,
        description: `Platform Develoment and Token Presale`,
    },
    {
        age: `Q2 2025`,
        description: `Beta Launch and Ecosystem Expansion`,
    },
    {
        age: `Q3 2025`,
        description: `Global Expansion and New Games`,
    },
];
---
<section id="Roadmap" class="z-20 relative min-h-screen md:min-h-auto pt-4 pb-8">
<Image
    src="/roadmap.jpg"
    alt="roadmap-background"
    height={100}
    width={100}
    class="absolute -z-10 top-0 left-0 w-full h-full object-cover object-center brightness-50"
    style={{ objectFit: 'cover' }} // Asegúrate de que esta línea esté incluida
/>


    <h2 class="uppercase text-white text-center font-extrabold text-2xl md:text-4xl mb-8">
        Our Roadmap
    </h2>

    <div class="flex flex-col md:flex-row gap-8 w-full justify-center items-center md:h-full px-4">
        {cards.map((e, i) => {
            return (
                <div class="flex flex-col items-center text-center w-full md:w-auto">
                    <p
                        class="text-white font-semibold bg-secundary w-20 h-8
                        flex justify-center text-nowrap items-center rounded-2xl p-2 text-sm md:text-base"
                    >
                        {e.age}
                    </p>
                    <Image
                        src="/roadmap_card.jpg"
                        alt={`roadmap_card ${i}`}
                        loading="lazy"
                        height={100}
                        width={100}
                        class="w-40 md:w-56 h-60 md:h-80 rounded-2xl border my-2"
                    />
                    <p class="max-w-48 text-sm md:text-base font-semibold text-white">
                        {e.description}
                    </p>
                </div>
            );
        })}
    </div>
</section>
